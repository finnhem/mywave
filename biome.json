{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "useConst": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "include": [
      "apps/waveform/static/waveform/js/**/*.ts",
      "apps/waveform/static/waveform/js/**/*.js"
    ],
    "ignore": [
      "dist/",
      "node_modules/",
      "**/*.min.js",
      "**/*.min.css",
      ".venv/",
      "**/*bundle.js",
      "staticfiles/",
      "rspack.config.js"
    ]
  }
}
